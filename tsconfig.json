{
  "compilerOptions": {
    "target": "ESNext", // 최신 ECMAScript로 컴파일
    "module": "ESNext", // ESNext 모듈 시스템 사용
    "moduleResolution": "Node", // Node.js 모듈 해석 사용
    "strict": true, // 모든 엄격 모드 활성화
    "baseUrl": ".", // 기준 경로를 프로젝트 루트로 설정
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@store/*": ["src/store/*"],
      "@components/*": ["src/components/*"]
    },
    "jsx": "react-jsx", // React 17+ JSX 변환 지원
    "allowSyntheticDefaultImports": true, // ES 모듈을 기본 가져오기처럼 사용 가능
    "esModuleInterop": true, // CommonJS/ES 모듈 호환
    "forceConsistentCasingInFileNames": true, // 파일 이름 대소문자 일관성 강제
    "skipLibCheck": true, // 라이브러리 타입 검사를 건너뜀
    "resolveJsonModule": true, // JSON 모듈 지원
    "isolatedModules": true, // 개별 파일 컴파일 강화
    "outDir": "./dist", // 컴파일 결과 출력 경로
    "rootDir": "./src" // 소스 파일 기준 경로
  },
  "include": ["src"], // 포함할 파일 경로
  "exclude": ["node_modules", "dist"] // 제외할 경로
}
